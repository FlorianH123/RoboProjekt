<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/port_1_default_value"
        android:key="@string/settings_port_1_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/settings_port_1" />

    <EditTextPreference
        android:defaultValue="@string/port_2_default_value"
        android:key="@string/settings_port_2_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/settings_port_2" />

    <EditTextPreference
        android:defaultValue="@string/port_3_default_value"
        android:key="@string/settings_port_3_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/settings_port_3" />

    <EditTextPreference
        android:defaultValue="@string/angular_velocity_default_value"
        android:key="@string/settings_angular_velocity_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/settings_angular_velocity" />

    <PreferenceScreen android:title="@string/settings_robot_speed">
        <EditTextPreference
            android:defaultValue="@string/maximum_forward_speed_default_value"
            android:key="@string/settings_maximum_forward_speed_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/maximum_forward_speed"/>

        <EditTextPreference
            android:defaultValue="@string/maximum_backward_speed_default_value"
            android:key="@string/settings_maximum_backward_speed_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/maximum_backward_speed"/>
    </PreferenceScreen>
</PreferenceScreen>