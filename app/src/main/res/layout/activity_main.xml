<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roboprojekt.mobileapplicationdev.roboprojekt.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_debug_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editText_ipAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/text_enter_ip" />

            <ToggleButton
                android:id="@+id/toggleButton_connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onConnectionButtonClick"
                android:text="ToggleButton"
                android:textOff="@string/text_toggleButton_connection_off"
                android:textOn="@string/text_toggleButton_connection_on" />

            <Switch
                android:id="@+id/switch_driveModus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Switch"
                android:textOff="@string/text_switch_driveModus_off"
                android:textOn="@string/text_switch_driveModus_on" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
